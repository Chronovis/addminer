.upload-progress
	centerContent()
	position relative
	well()

	img
		max-height 100%
		max-width 100%

	.loader, .status
		height 100%
		position absolute
		width 100%

	.loader
		background-color rgba(0, 0, 0, 0.8)
		bottom 0
		transition all 200ms
		z-index 1

	.status
		centerContent()
		color white
		font-weight bold
		font-size 2em
		text-shadow 0 0 6px black
		z-index 2

		&.ready
			color lightgreen
			font-size 6em
